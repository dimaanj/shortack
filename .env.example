# Redis for BullMQ (default: redis://localhost:6379)
REDIS_URL=redis://localhost:6379

# Firestore (use one of)
# - GCP: set GOOGLE_APPLICATION_CREDENTIALS to service account JSON path
# - Emulator: set FIRESTORE_EMULATOR_HOST=http://localhost:8080 and FIREBASE_PROJECT_ID=shortack
FIREBASE_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=

# Web Push (Phase 3). Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Auth.js (NextAuth)
AUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# Telegram (custom provider)
TELEGRAM_BOT_TOKEN=
NEXT_PUBLIC_TELEGRAM_BOT_NAME=ShortackBot
NEXT_PUBLIC_APP_URL=http://localhost:3000

# OAuth2 (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
NEXT_PUBLIC_GOOGLE_ENABLED=false

# Email magic link (optional)
EMAIL_FROM=
RESEND_API_KEY=
